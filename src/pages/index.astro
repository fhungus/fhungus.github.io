---
import Layout from "../layouts/Layout.astro";
import About from "../components/About.astro";
import Hero from "../components/Hero.astro";
---

<Layout>
	<Hero />

	<div class="mottle"></div>

	<div class="about-wrapper">
		<About />
	</div>
</Layout>

<style>
	.header {
		padding: 5em;
	}

	.about-wrapper {
		padding-top: 3em;
		position: relative;
		left: 0;
		right: 0;

		display: flex;
		justify-content: center;
	}

	.mottle {
		z-index: 0;
		content: " ";

		width: 100vw;
		height: 7em;
		margin-top: -1em;

		position: relative;

		background: linear-gradient(89deg, var(--bg) -25%, rgba(255,255,255,0.0) 50%, var(--bg) 125%),
		linear-gradient(
			0deg,
			rgba(47,40,29,0) 0%,
			rgb(51, 27, 19) 12%,
			rgb(92,93,63) 13%,
			rgb(153,132,73) 18%,
			rgb(201, 145, 55) 26%,
			rgb(138, 68, 27) 44%,
			rgb(59, 42, 33) 54%,
			rgb(31, 27, 24) 70%,
			rgba(47,40,29,0) 100%
		);
	}

	.mottle::after {
		content: " ";

		background: linear-gradient(90deg, rgba(255,255,255,0) 0%, rgba(255,255,255,0.25) 50%, rgba(255,255,255,0) 100%);
		
		position: absolute;
		left: 20%;
		right: 20%;
		bottom: 25%;
		height: 0.25em;

	}
</style>
