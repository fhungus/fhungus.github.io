---
import Rain from './rain/Rain.svelte'
---

<div class="header-outer">
    <div class="header">
        <h1 class="header-title">fhungus</h1>
        <Rain client:only="svelte"/>
    </div>
    <div class="outer-image">
        <img class="guh" src="/images/franklins-journey.png"/>
    </div>
</div>

<style>
    @keyframes letsgooo {
        0% {
            filter: opacity(0) brightness(2) blur(50px);
        }
        70% {
        }
        100% {
            filter: opacity(1) brightness(1) blur(0);
        }
    }
    .header-outer {
        display: flex;
        justify-content: stretch;

        position: relative;
        left: 0;
        right: 0;


    }

    .header {
        background: radial-gradient(200% 100% at bottom right,rgb(238, 130, 6) 0%, rgb(255, 199, 80) 50%, rgb(115, 223, 192)100%);

        z-index: 2;
        
        border-radius: 0 0 1em 0;
        border-width: 2px;
        border-top: 0;
        border-style: solid;
        border-color: var(--border);

        width: 69vw;
        height: 32em;

        padding: 1em;

        position: relative;

        display: flexbox;
        flex-direction: column;
        text-align: end;
        align-content: end;

        animation-name: letsgooo;
        animation-duration: .2s;
        animation-timing-function:cubic-bezier(0.785, 0.135, 0.15, 0.86);
        animation-play-state: running;
    }	

    .header h1 {
        mix-blend-mode: color-dodge;
        color: #5cb396;

        margin-right: 0.2em;

        font-size: 10em;
        font-weight: 500;
    }

    @media (width <= 80rem) {
        .header {
            width: 100vw;
            border-radius: 0vw;
            text-align: start;
        }
        .outer-image {
            z-index: 2;
            position: absolute;
        }
    }
    
    .outer-image {
        position: relative;
        flex: auto;
    }

    .guh {
        height:100%;
        right: 0;
        position: absolute;
    }

    .header-title {
        font-size: 5em;
        line-height: 0em;
    }
</style>
