import Bar from "../components/Bar.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/public/images/fungus.png" />
		<meta name="generator" content={Astro.generator} />
